<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:padding="10dp">

        <TextView
            android:id="@+id/discover_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ggg" />

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:numColumns="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:horizontalSpacing="3dp"></GridView>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/discover_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="美剧炸了" />

            <TextView
                android:id="@+id/discover_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/discover_text4"
                android:text="3小时前" />
            <ImageView
                android:id="@+id/discover_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@mipmap/zw"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/discover_text6"/>
            <TextView
                android:id="@+id/discover_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="5dp"
                android:text="98"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/discover_img1"/>
            <ImageView
                android:layout_toLeftOf="@+id/discover_text5"
                android:id="@+id/discover_img1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@mipmap/zx"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/discover_text5"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="123"
                android:layout_marginRight="10dp"
                />
            
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>