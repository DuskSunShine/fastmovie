<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scy.fastmovie.fragment.CinemaFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/cinema_toolbar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <EditText
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:id="@+id/search_cinema"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:drawablePadding="10dp"
                android:hint="@string/search_cinema"
                android:textColor="@color/hui"
                android:drawableLeft="@mipmap/a1v"
                android:background="@drawable/search_shape"
                android:textSize="16sp"/>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/cinema_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptrHeaderTextColor="#238ac6">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
</LinearLayout>
