<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scy.fastmovie.fragment.SeekFragment"
    android:id="@+id/swip"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    >

    <android.support.v7.widget.RecyclerView
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:id="@+id/recycle_type"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="10dp"
        android:id="@+id/recycle_area"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="10dp"
        android:id="@+id/recycle_year"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="40dp">

    </android.support.v7.widget.RecyclerView>
    <com.scy.fastmovie.customviews.MyGridView
        android:id="@+id/grid"
        android:numColumns="2"
        android:scrollbars="none"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
    </com.scy.fastmovie.customviews.MyGridView>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textColor="@color/black"
            android:text="@string/GlobalFilmAwards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/GlobalAwards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:id="@+id/All"
        android:gravity="center"
        android:padding="15dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="wrap_content">
        <TextView
            android:text="@string/AllFilm"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:drawableRight="@drawable/all"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>